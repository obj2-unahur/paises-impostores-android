<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:id="@+id/resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        >
        <ar.edu.unahur.obj2.claseBonusKotlinAndroid.widgets.CampoView
            android:id="@+id/campoPaisesMasDensos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margenVertical"
            app:label="@string/paises_con_mayor_densidad_poblacional"
            />
        <ar.edu.unahur.obj2.claseBonusKotlinAndroid.widgets.CampoView
            android:id="@+id/campoContinenteConMasPlurinacionales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margenVertical"
            app:label="@string/continente_con_mas_plurinacionales"
            />
        <ar.edu.unahur.obj2.claseBonusKotlinAndroid.widgets.CampoView
            android:id="@+id/campoPromedioDensidadPoblacionalPaisesIsla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margenVertical"
            app:label="@string/promedio_densidad_poblacional_paises_isla"
            />
    </LinearLayout>
</LinearLayout>